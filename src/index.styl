html, body, .app { height: 100% }

body {
  background-color: #000;
  color: #eee;
  padding: 0;
  margin: 0;
  height: 100%;
  font: 12px sans-serif;
  overflow-x: hidden;
}


.app {
  width: 100%;

  a {
    color: #ccc;
    font-weight: bold;
  }

  p {
    font-size: 1.25em;
    line-height: 1.5em;
  }

  dl {
    margin: 0;
    padding: 0;
    dt {
      display: block;
      font-size: 1.25em;
      font-weight: bold;
      background: #666;
      color: #000;
      padding: 0.5em;
    }
    dd {
      display: block;
      min-height: 50px;
      margin: 0;
      padding: 0.25em 0;
    }
  }

  header {

    h1 {
      display: block;
      position: fixed;
      left: 0; top: 0;
      width: 100%;
      height: 50px;
      line-height: 50px;
      margin: 0;
      padding: 0;
      background-color: #888;
      color: #000;
      text-align: center;
    }

    button {
      display: block;
      position: absolute;
      border: none;
      border-radius: 0;
      background: #888;
      width: 50px; height: 50px;
      font-size: 1em;
    }

    button.back {
      left: 0; top: 0;
      border-right: 1px solid #000;
    }

    button.help {
      right: 0; top: 0;
      border-left: 1px solid #000;
    }

  }

  &.home button.back {
    display: none;
  }

  &.help button.help {
    display: none;
  }

  &.startup button {
    display: none;
  }

  section.main {
    position: absolute;
    left: 0%;
    width: 100%;
    height: 100%;
    transition: left 0.2s;

    .view {
      padding: 50px 0 0 0;
      h2 {
        text-align: center;
        color: #999;
        line-height: 50px;
        font-size: 1.25em;
        border-bottom: 1px solid #666;
        padding: 0; margin: 0;
      }
      p {
        margin: 0.5em 1em;
      }
      button {
        font-size: 1em;
        padding: 0 1em;
        min-height: 50px;
        margin: 0.5em 0.5em;
      }
      button.mainAction {
        font-size: 1.25em;
        display: block;
        margin: 0;
        width: 100%;
      }
    }

    .startupView {
      h2 {
        line-height: 100vh;
      }
    }

    .homeView {
    }

    .logView {

      .console {
        position: absolute;
        width: 100%;
        height: 66%;
        bottom: 0; left: 0;
        border-top: 1px solid #fff;
        overflow: scroll-x;
      }

    }

    .settingsView {
      .dropbox {
        .whenDisconnected { display: block; }
        .whenConnected { display: none; }
        .whenWorking { display: none; }
      }
      .dropbox.connected {
        .whenDisconnected { display: none; }
        .whenConnected { display: block; }
        .whenWorking { display: none; }
      }
      .dropbox.working {
        .whenDisconnected { display: none; }
        .whenConnected { display: none; }
        .whenWorking { display: block; }
      }
    }

  }

  /* Inspired by: http://www.sitepoint.com/pure-css-off-screen-navigation-menu/ */

  .nav-trigger {
    position: absolute;
    clip: rect(0, 0, 0, 0);
  }

  label[for="nav-trigger"] {
    display: block;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 999;
    width: 50px;
    height: 50px;
    cursor: pointer;
    border-right: 1px solid #000;
    background-image: url("/img/menu.svg");
    background-size: contain;
  }

  nav {
    display: block;
    background: rgba(32, 32, 32, 0.9);
    position: fixed;
    top: 50px;
    bottom: 0;
    width: 50%;
    left: -50%;
    transition: left 0.2s;
  }

  .nav-trigger:checked ~ label[for="nav-trigger"] {
    background-color: #bbb;
  }

  .nav-trigger:checked ~ nav {
    left: 0px;
    transition: left 0.2s;
  }

  .nav-trigger:checked ~ section.main {
    left: 50%;
    transition: left 0.2s;
  }

  nav ul {
    padding: 0;
    margin: 0;
  }

  nav ul li {
    display: block;
    float: none;
    text-align: right;
    font-size: 1.25em;
    border-bottom: 1px solid #666;
    line-height: 50px;
    padding: 0 1em;
  }

  nav ul li a {
    display: block;
    text-decoration: none;
    font-weight: bold;
    line-height: 50px;
  }

}
