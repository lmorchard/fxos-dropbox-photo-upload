html, body, .app { height: 100% }

body {
  background-color: #000;
  color: #eee;
  padding: 0;
  margin: 0;
  height: 100%;
  font: 12px sans-serif;
}


.app {
  width: 100%;

  a {
    color: #ccc;
    font-weight: bold;
  }

  p {
    font-size: 1.25em;
    line-height: 1.5em;
  }

  h1 {
    display: block;
    position: fixed;
    left: 0; top: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    margin: 0;
    padding: 0;
    background-color: #888;
    color: #000;
    text-align: center;

    button {
      display: block;
      position: absolute;
      border: none;
      border-radius: 0;
      background: #888;
      width: 50px; height: 50px;
      font-size: 1em;
    }

    button.back {
      left: 0; top: 0;
      border-right: 1px solid #000;
    }

    button.help {
      right: 0; top: 0;
      border-left: 1px solid #000;
    }

  }

  &.home button.back {
    display: none;
  }

  &.help button.help {
    display: none;
  }

  &.startup button {
    display: none;
  }

  section.main {

    .view {
      margin-top: 50px;
    }

    .startupView {
      h2 {
        line-height: 100vh;
        text-align: center;
        color: #999;
      }
    }

    .connectView {
      button.connect {
        margin: 1em;
        font-size: 1.5em;
      }
    }

    .homeView {
      .console {
        position: absolute;
        width: 100%;
        height: 50%;
        bottom: 0; left: 0;
        border-top: 1px solid #fff;
        overflow: scroll-x;
      }
    }

    .helpView {
      padding: 1em 2em;

      p code {
        border-radius: 0;
        background: #888;
        padding: 0 0.5em;
        color: #000;
        font-weight: bold;
      }

    }

  }

}
